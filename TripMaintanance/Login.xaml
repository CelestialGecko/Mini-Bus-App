<Window x:Class="TripMaintanance.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TripMaintanance"
        mc:Ignorable="d" FontSize="18" FontFamily="Axalp Grotesk" 
        Title="MainWindow" Height="300" Width="380" WindowStyle="None">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="36" Foreground="#7456AE" FontWeight="Bold"
                   Grid.ColumnSpan="3" Margin="-1,0,0,10" Text="Login or Sign up"/>
        <TextBlock Grid.Column="1" Grid.Row="2"  Text="Username" Foreground="#FFBBBCBD" 
                   FontWeight="Bold" FontSize="12" Margin="1,15,101,5"/>
        <TextBox x:Name="txtInputUsername" Grid.Column="1" Grid.Row="3" BorderBrush="#E6E7E9"
                 Width="330" Grid.ColumnSpan="3" Background="#E6E7E9" Margin="0, 0, 30, 0"/>
        <TextBlock Grid.Row="4"  Text="Password" Foreground="#FFBBBCBD" 
                   FontWeight="Bold" FontSize="12" Margin="1,15,101,5" Grid.ColumnSpan="2" Grid.Column="1"/>
        <TextBox x:Name="txtInputPassword" Grid.Column="1" Grid.Row="5" Background="#E6E7E9" 
                 Width="330" Grid.ColumnSpan="3" BorderBrush="#E6E7E9" Margin="0, 0, 30, 0"/>

        <Button x:Name="EnterInput" Content="ENTER" Grid.Column="1" Grid.Row="7" Grid.ColumnSpan="3" 
                Click="EnterInput_Click" Foreground="White" Cursor="Hand" Margin="0, 10, 30, 0"
                Background="#7456AE" FontSize="12" FontWeight="Bold" Width="330" Height="25" />
        <Button x:Name="CloseLogin" Content="Close" Grid.Column="1" Grid.Row="9" Height="25" 
                Click="CloseLogin_Click" FontSize="12" FontWeight="Bold" Margin="0, 10, 30, 0"
                Background="White" Foreground="#7456AE" Width="330" Grid.ColumnSpan="3" Cursor="Hand"/>
    </Grid>
</Window>
